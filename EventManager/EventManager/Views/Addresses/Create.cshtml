@model EventManager.ViewModels.Models.CreateAddressViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>CreateAddressViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AddressName" class="control-label"></label>
                <input asp-for="AddressName" class="form-control" />
                <span asp-validation-for="AddressName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityViewModel.CityName" class="control-label"></label>
                <input asp-for="CityViewModel.CityName" class="form-control" />
                <span asp-validation-for="CityViewModel.CityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityViewModel.Countries" class="control-label"></label>
                <select asp-for="CityViewModel.CountryCode" asp-items="@(new SelectList(Model.CityViewModel.Countries, "CountryCode","Name"))">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="CityViewModel.Countries" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
